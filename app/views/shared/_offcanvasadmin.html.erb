
<div class="offcanvas offcanvas-end overflow-auto canvas-container" data-bs-scroll="true" tabindex="-1" id="kidstrotteroffcanvasadmin" aria-labelledby="kidstrotteroffcanvasadminLabel">

    <div class="row justify-content-center mt-4 canvas-wrap1 shadow-sm">
      <div class="canvas-avatar col-4">
        <% if current_user.avatar.attached?%>
          <%= image_tag(current_user.avatar, alt: "avatar", class: "avatar", id: "avatar", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>
        <% else %>
          <%= image_tag("avatar.png", alt: "avatar", class: "avatar", id: "avatar", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>
        <% end %>
      </div>

      <div class='canvas-header col-6'>
        <div class="canvas-text">Logged in as: <%= current_user.first_name.capitalize %></div>
      </div>

      <div class='canvas-header col-2'>
        <button type="button" class="btn p-0 fa-solid fa-xmark fa-2x mt-1" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>


    </div>

    <div class="row justify-content-center mt-4 canvas-wrap2 shadow-sm">
      <div class='canvas-body col-12'>

        <div class="canvas-text">
          <i class="fa-regular fa-futbol"></i>
          <%= link_to "Hosted Activities", organizer_activities_path %>
        </div>

        <div class="canvas-text">
          <i class="fa-regular fa-address-card"></i>
          <%= link_to "Edit Profile", edit_user_registration_path %>
        </div>

        <div class="canvas-text">
          <i class="fa-sharp fa-solid fa-square-phone-flip"></i>
          <%= link_to "Help & Support", "#" %>
        </div>

        <div class="canvas-text">
          <i class="fa-regular fa-moon"></i>
          <%= link_to "Display Settings", "#" %>
        </div>

        <div class="canvas-text">
          <i class="fa-solid fa-user-tie"></i>
          <%= link_to "About Us", "#" %>
        </div>

        <div class="canvas-text-last">
          <i class="fa-solid fa-right-from-bracket"></i>
          <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete} %>
        </div>

      </div>
    </div>
</div>
