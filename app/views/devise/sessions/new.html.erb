<div class="devise-container">

  <div class="container">
      <div class="grid">
        <div class="col-6 mx-auto">
          <div class="form">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),data: {turbo: false}) do |f| %>
            <br>

            <div class="bg-white text-weight-medium mt-5 p-3" style="border-radius: 15px; border: solid 1px F5F5D; box-shadow: 0 3px 10px rgb(0 0 0 / 0.3);">

              <div class="text-center">
                <br>
                <h2>Login</h2>
              </div>

              <div class="form-inputs" style= "height: 430px;">

                <div class="mb-3" style="margin: 0 2rem">
                    <%= f.input :email,
                                required: false,
                                autofocus: true,
                                input_html: { autocomplete: "email" } %>
                </div>

                <div class="mb-3" style="margin: 0 2rem">
                  <%= f.input :password,
                              required: false,
                              input_html: { autocomplete: "current-password" } %>
                </div>

                <div class ="text-secondary text-start" style="margin: 0 2rem">
                 <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                <div>

                <br>

                <div class="mb-3" style="margin: 0 0rem">
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>

                <div>
                <br>
                  <%= link_to "Return", root_path, class: "btn btn-outline-secondary fs-6 py-2 mt-4", style: 'width:130px; margin-left: 135px;' %>
                  <%= f.button :submit, "Login", class: 'btn purple-btn-solid fs-6 py-2 mt-4', style: 'margin-left: 10px; width:130px;' %>
                </div>

              </div>

                <br>

                <div class ="text-secondary text-center">
                 New to our website? <%= link_to "Sign up here", new_registration_path(resource_name) %>
                <div>

              </div>

            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
