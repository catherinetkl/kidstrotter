  <div class="container">
    <div class="row">
      <div class="col-6 mx-auto mb-5 mt-3">

        <div>Activity Name: <%= @activity.name %></div>

        <div>Category: <%= @activity.category.name %></div>

        <div>Adult Price: <%= @activity.adult_price %></div>

        <div>Child Price: <%= @activity.child_price %></div>

      </div>


    <div class="row">
      <div class="col-6 mx-auto">
        <%= simple_form_for [@activity, @booking] do |f| %>
                  <%= f.input :adult_qty %>
                  <%= f.input :child_qty %>
                  <%= f.input :start_time, label: "Booking Date" %>
                  <div>
                    <%= link_to "Return", activities_path, class: "btn btn-outline-secondary" %>
                    <%= f.button :submit, "Submit", class: 'btn text-white', style: "width: 175px; height: 40px; border-radius: 5px; background-color: #f03827;" %>
                  </div>

                <% end %>
      </div>
    </div>

      </div>
    </div>
  </div>
