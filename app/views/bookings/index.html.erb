<div class="container pt-2">
  <div class="d-flex p-3">
    <div class="col-md-9">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>Your Bookings</h3>
        </div>

        <div class="container">
          <div class="d-flex p-3">
            <table class="table table-striped table-hover text-center">
              <thead>
              <tr>
              <div>
              <th colspan="10">ID</th>
              <th colspan="10">Activity</th>
              <th colspan="10">Adults</th>
              <th colspan="10">Children</th>
              <th colspan="10">Status</th>
              <th colspan="10">Price</th>
              <th colspan="10"></th>
              </div>
            </tr>
          </thead>
        <tbody>
        <div class="panel-body">
          <% @bookings.each_with_index do | booking, index | %>
              <td colspan="10"><%= index + 1 %></td>
          <div class="row">
            <div class="col-md-2">
              <%= booking.start_time.strftime('%v') %>
            </div>
              <td colspan="10"><%= booking.activity.name %></td>
              <td colspan="10"><%= booking.adult_qty %></td>
              <td colspan="10"><%= booking.child_qty %></td>
              <td colspan="10"><%= booking.status %></td>
              <td colspan="10">S$ <%= sprintf('%.2f', booking.activity.adult_price) %></td>
              <td colspan="10">S$ <%= sprintf('%.2f', booking.activity.child_price) %></td>
              <td colspan="10">

                <%= form_for(booking) do |f| %>
                  <div class ="mx-10 px-10 text-end">
                    <%= f.submit 'Leave a Review', class: "btn btn-sm", style: "margin-right: 10px; background-color: #2dbdb4; color: white; border-radius: 10px" %>
                    <%= f.submit 'Cancel Booking', class: "btn btn-sm", style: "margin-right: 20px; background-color: #f03826; color: white; border-radius: 10px" %>
                <% end %>

                </div>
              </td>
            </tr>
          <% end %>
      </tbody>
      </table>
      </div>
      </div>
      </div>
    </div>
    </div>
  </div>
</div>
