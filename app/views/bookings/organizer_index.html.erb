<div class="container pt-2">
  <div class="d-flex p-3">
    <h3>Patron List</h3>
  </div>
</div>

<div class="container">
  <div class="d-flex p-3">

      <div>
        <table class="table table-striped table-hover text-center", style="width:1200px;">
          <thead>
            <tr>
              <div>
                <th colspan="10">No.</th>
                <th colspan="10">User</th>
                <th colspan="10">Activity</th>
                <th colspan="10">Status</th>
                <th colspan="10"></th>
              <div>
            </tr>
          </thead>

          <tbody>
            <% @bookings.each_with_index do | booking, index| %>
              <td colspan="10"><%= index + 1 %></td>
              <td colspan="10"><%= booking.user.first_name %></td>
              <td colspan="10"><%= booking.activity.name %></td>
              <td colspan="10"><%= booking.status %></td>
              <td colspan="10">

              <div class ="mx-10 px-10 text-end">
                <%= link_to 'Approve' , edit_booking_path(booking, request: {status: 'Booked'}) %>
                <%= link_to "Reject" , booking_path(booking), style: "margin-right:20px; margin-top: 12px;",data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
              </div>
            </tr>

            <% end %>
            </div>
          </tbody>

        </table>
      <div>
  </div>
</div>
