<div class="container pt-2">
  <div class="d-flex p-3">
    <h3>Your Bookmarks</h3>
  </div>
</div>

    <div class="container">
      <div class="d-flex p-3">
        <table class="table table-striped table-hover text-center">
          <thead>
            <tr>
            <div>
              <th colspan="10">ID</th>
              <th colspan="10">Activity</th>
              <th colspan="10">Location</th>
              <th colspan="10">Adult Price</th>
              <th colspan="10">Child Price</th>
              <th colspan="10">Age Group</th>
            <div>
            </tr>
          </thead>
        <tbody>
          <% current_user.favorited_by_type('Activity').each_with_index do | bookmark, index | %>
            <tr>
              <td colspan="10"><%= index + 1 %></td>
              <td colspan="10"><%= bookmark.name %></td>
              <td colspan="10"><%= bookmark.address %></td>
              <td colspan="10"><%= number_to_currency(bookmark.adult_price) %></td>
              <td colspan="10"><%= number_to_currency(bookmark.child_price) %></td>
              <td colspan="10"><%= bookmark.age_group %></td>
              <td colspan="10">
              <div class="d-flex justify-content-end align-items-center">
                <div class ="mx-10 px-10 text-end">
                  <% if bookmark.adult_price == 0 %>

                  <% else %>
                    <%= link_to "Book", new_activity_booking_path(bookmark), class: "btn btn-sm", style: "margin-right: 10px; background-color: #2dbdb4; color: white; border-radius: 10px" %>
                  <% end %>
                </div>
                <div class ="mx-10 px-10 text-end">
                  <%= link_to "ðŸ—‘", unfavorite_activity_path(bookmark, page: 'bookmarks'), class: "btn btn-sm", style: "margin-right: 10px; background-color: red; color: white; border-radius: 10px", data: {turbo_confirm: "Are you sure?"} %>
                </div>
              </div>
              </td>
            </tr>
          <% end %>
      </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
<div class="container d-flex justify-content-center">
  <%= link_to "Return to Listing", activities_path, class: "btn purple-btn-solid fs-6 py-2 w-25" %>
</div>
