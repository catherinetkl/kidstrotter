<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1627764940620-90393d0e8c34?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80);">
  <div class="container">
    <h1>Your handy dandy kids activities guide</strong>!</h1>
    <div class="search-bar d-flex justify-content-between align-items-center">
      <i class="fa-solid fa-magnifying-glass"></i>
      <button class="btn btn-success">Search</button>
    </div>
  </div>
</div>

<section class="container">
  <div class="row row-cols-7 my-5">
    <div class="col">
      <div class="box border border-1 d-flex flex-column justify-content-center align-items-center">
        <i class="fa-solid fa-gamepad"></i>
        <p>Overview</p>
      </div>
    </div>
    <div class="col">
      <div class="box border border-1 d-flex flex-column justify-content-center align-items-center">
        <i class="fa-solid fa-film"></i>
        <p>Theme & water parks</p>
      </div>
    </div>
    <div class="col">
      <div class="box border border-1 d-flex flex-column justify-content-center align-items-center">
        <i class="fa-solid fa-umbrella"></i>
        <p>Museums & galleries</p>
      </div>
    </div>
    <div class="col">
      <div class="box border border-1 d-flex flex-column justify-content-center align-items-center">
        <i class="fa-solid fa-sun"></i>
        <p>Observation & scenic cable cars</p>
      </div>
    </div>
    <div class="col">
      <div class="box border border-1 d-flex flex-column justify-content-center align-items-center">
        <i class="fa-solid fa-pizza-slice"></i>
        <p>Attraction passes</p>
      </div>
    </div>
    <div class="col">
      <div class="box border border-1 d-flex flex-column justify-content-center align-items-center">
        <i class="fa-solid fa-mug-hot"></i>
        <p>Natural landscapes & gardens</p>
      </div>
    </div>
    <div class="col">
      <div class="box border border-1 d-flex flex-column justify-content-center align-items-center">
        <i class="fa-solid fa-users"></i>
        <p>Aquariums, zoos & farms</p>
      </div>
    </div>
  </div>
</section>

<div class="container">
  <h1 class="my-3">All Activities</h1>
  <div class="row row-cols-4">
    <% @categories.each do |category| %>
      <div class="col">
        <%= link_to category_path(category) do %>
          <div class="card-trip">
            <img src="https://images.unsplash.com/photo-1508597370841-836e72ef6f54?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=869&q=80" alt="">
            <div class="card-trip-infos">
                <div>
                  <h2><%= category.name %></h2>
                </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <br>
</div>
