<div class="container">
  <div>
  <h1 class="my-3"><%= @category.name %></h1>
  </div>
  <div class="form">
    <%= form_with url: activities_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,params[:query],class: "form-control", placeholder: "Find a activity"%>
      <%= submit_tag "Search", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
<div class="container d-flex mb-2">
  <div>
    <div class="card mb-3" style="max-width: 700px;">
      <% @activities.each do |activity| %>

        <div class="row g-0" style="border: 1px solid black; margin-top: 15px;">
          <div class="col-md-4">
            <%= image_tag(activity.card_image, class: "img-fluid rounded-start image-tag") %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><strong><%= activity.name %></strong></h5>
              <p class="card-text"><%= activity.address %></p>
              <p class="card-text">Suitable For Ages: <%= activity.age_group %></p>
              <p class="card-trip-pricing">
                <% if activity.adult_price == 0%>
                  Free
                <% else %>
                  $<%= sprintf('%.2f', activity.adult_price) %>
                <% end %>
              </p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              <%= link_to('Book Now', activity_path(activity), class: "btn btn-primary", type: "button", style: "border-radius: 5px;") %>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>

  <div style="width: 800px; height: 730px; float: right; position: sticky; bottom: 1rem;
  align-self: flex-end;" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
