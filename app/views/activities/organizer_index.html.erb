

<div class="container">
  <div class="d-flex justify-content-center p-4">
    <div>
      <table class="table table-striped table-hover text-center", style="width: 1000px;">
        <h3>Your Hosted Activities</h3>
        <thead>
          <tr>
            <div>
              <th colspan="10">No.</th>
              <th colspan="10">Activity</th>
              <th colspan="10">Category</th>
              <th colspan="10">Location</th>
              <th colspan="10"></th>
            <div>
          </tr>
        </thead>

        <tbody>
          <% @activities.each_with_index do | activity, index| %>
            <td colspan="10"><%= index + 1 %></td>
            <td colspan="10"><%= activity.name %></td>
            <td colspan="10"><%= activity.category.name %></td>
            <td colspan="10"><%= activity.address %></td>
            <td colspan="10">
          </tr>
          <% end %>
          </div>

        </tbody>

      </table>
    <div>
</div>
</div>
