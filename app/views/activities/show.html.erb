<div class="g-screen-container">
  <div class="card">
    <div class="row g-0">
      <div class="col-md-3">

        <form class="form-purple p-4 m-4">
          <div class="form-outline mb-4">
            <h3 class="fw-bold">Search</h3>
            <label class="form-label">Name of Attraction</label>
            <input type="text" placeholder="Universal Studios" class="form-control" />
          </div>

          <div class="form-outline mb-4">
            <label class="form-label">Visit Date</label>
            <input type="date" class="form-control" />
          </div>

          <div class="row mb-4">
            <div class="col vstack">
              <div class="row">
                <div class="col form-outline mb-4">
                  <label class="form-label">Adults</label>
                  <input type="number" min="0" placeholder="0" class="form-control" />
                </div>
                <div class="col form-outline mb-4">
                  <label class="form-label">Children</label>
                  <input type="number" min="0" placeholder="0" class="form-control" />
                </div>
              </div>
              <!-- Checkbox -->
              <div class="form-check">
                <input id="indoors" class="form-check-input" type="checkbox">
                <label for="indoors" class="form-check-label"> Indoors </label>
              </div>
              <div class="form-check">
                <input id="outdoors" class="form-check-input" type="checkbox">
                <label for="outdoors" class="form-check-label"> Outdoors </label>
              </div>
            </div>
          </div>

          <!-- Submit button -->
          <div class="d-grid">
            <%= link_to "Search",  "", class: %(btn btn-primary form-purple-btn), type: %(submit) %>
          </div>
        </form>

        <form class="form-purple p-4 m-4">
          <div class="form-outline mb-4">
            <h3 class="fw-bold">Package details</h3>
            <h4><span class="d-grid badge text-bg-light text-wrap text-start">No cancellation</span></h4>
            <h4><span class="d-grid badge text-bg-light text-wrap text-start">Instant confirmation</span></h4>
            <h4><span class="d-grid badge text-bg-light text-wrap text-start">Book now for today</span></h4>
          </div>

          <div class="form-outline mb-4">
            <h3 class="fw-bold">Opening hours</h3>

          </div>

          <div class="form-outline mb-4">
            <h3 class="fw-bold">Eligibility</h3>

          </div>

        </form>

      </div>
      <div class="col-md-9 d-flex align-items-between flex-column">

        <div class="card-body">
          <h1 class="card-title fw-bold"><%= @activity.name %></h1>
          <p class="mb-2"><i class="fa-solid fa-star"></i> Reviews qty | <i class="fa fa-book"></i> Bookings qty | <i class="fa-solid fa-location-dot"></i> <%= @activity.address %></p>

          <div class="row">

            <div class="col-lg-8 col-md-12 mb-lg-0 mb-3">
              <div class="img-preview bg-image" style="height: 600px; background-image: url(<%="#{@activity.image_url}"%>);"></div>
            </div>

            <div class="col-lg-4 mb-lg-0 d-grid">
              <div class="img-preview bg-primary align-self-top mb-2" style="height: 290px;"></div>
              <div class="img-preview bg-danger align-self-end mt-2" style="height: 290px;"></div>
            </div>

          </div>
        </div>

        <div class="card-body">
          <div class="row">
            <div class="col-lg-8 col-md-12 mb-lg-0 mb-3">
              <div class="card-activity">
                <span class="h5 lh-sm fw-bold"><%= @activity.description %></span>
              </div>
            </div>

            <div class="col-lg-4 mb-lg-0">
              <div class="card-activity text-center">

                <div class="d-flex flex-column" style="height: 100%;">
                  <div class="p-2 h2 fw-bold">Pricings</div>
                  <div class="p-2 h3">Adult: <span class="fw-bold"><%= number_to_currency(@activity.adult_price) %></span></div>
                  <div class="p-2 h3">Child: <span class="fw-bold"><%= number_to_currency(@activity.child_price) %></span></div>
                  <div class="mt-auto">

                    <div class="row">
                      <div class="col-lg-6 mb-lg-0 mb-3">
                        <%= simple_form_for([@activity, @bookmark]) do |f| %>
                          <%= f.submit "Bookmark", class: %(btn purple-btn-solid p-3) %>
                        <%end%>
                      </div>

                      <div class="col-lg-6 mb-lg-0 mb-3">
                        <%= link_to "Book Now", new_activity_booking_path(@activity), class: %(btn purple-btn-outline p-3) %>
                      </div>
                    </div>

                  </div>
                </div>

              </div>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>






