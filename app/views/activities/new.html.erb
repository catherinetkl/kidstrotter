<div class="card">
  <div class="row g-0" id="background-img">
    <div class="mx-auto col-md-12">
      <div class="card-body">

        <div class="devise-container" style="margin-bottom: 50px;">
          <div class="container">
            <div class="grid">

              <div class="col-6 offset-3">
                <div class="form">
                  <%= simple_form_for (@activity) do |f| %>

                  <div class="bg-white text-weight-medium mt-4 p-3" style="border-radius: 15px; border: solid 1px F5F5D; box-shadow: 0 3px 10px rgb(0 0 0 / 0.3);">

                    <div class="form-inputs" style= "height: 740px;">


                      <div class="text-center">
                        <br>
                        <h3>Create a new activity</h3>
                        <br>
                      </div>
                      <div class="mb-3" style="margin: 0 2rem">
                        <%= f.input :name %>
                      </div>

                      <div class="mb-4" style="margin: 0 2rem">
                        <%= f.association :category %>
                      </div>

                      <div class="mb-3" style="margin: 0 2rem">
                        <%= f.input :address %>
                      </div>

                      <div class="mb-3" style="margin: 0 2rem">
                        <%= f.input :adult_price %>
                      </div>

                      <div class="mb-3" style="margin: 0 2rem">
                        <%= f.input :child_price %>
                      </div>

                      <div class="mb-3" style="margin: 0 2rem">
                        <%= f.input :age_group %>
                      </div>

                      <div class="mb-3" style="margin: 0 2rem">
                        <%= f.input :photo, as: :file %>
                      </div>
                    </div>

                    <div class="form-actions" style= "margin 0 2rem; margin-bottom: 35px;">
                      <%= link_to "Return", activities_path, class: "btn btn-outline-secondary fs-6 py-2 w-25", style: "margin-left: 140px" %>
                      <%= f.button :submit, "Submit", class: 'btn purple-btn-solid fs-6 py-2 w-25', style: "margin-left: 10px" %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
