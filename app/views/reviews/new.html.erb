  <div class="container">
    <div class="row">
      <div class="col-6 mx-auto mb-5 mt-3">

        <div>Activity Name: <%= @booking.activity.name %></div>

        <div>Category: <%= @booking.activity.category.name %></div>

        <div>Adult Price: <%= @booking.activity.adult_price %></div>

        <div>Child Price: <%= @booking.activity.child_price %></div>


      </div>

    <div class="row">
      <div class="col-6 mx-auto">
        <%= simple_form_for [@booking, @review,] do |f| %>
          <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: {controller: "star-rating"}} %>
          <%= f.input :comment %>
          <%= link_to "Return", reviews_path, class: "btn btn-outline-secondary" %>
          <%= f.button :submit, "Submit", class: 'btn text-white', style: "width: 175px; height: 40px; border-radius: 5px; background-color: #f03827;" %>
          </div>
        <% end %>
      </div>
    </div>

      </div>
    </div>
  </div>
